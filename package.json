{
  "name": "playwright-otv",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/api.ts",
    "build": "tsc -p tsconfig.build.json && echo 'TypeScript compilation complete' && ls -R dist && cp src/json/*.json dist/",
    "serve": "NODE_ENV=production PLAYWRIGHT_BROWSERS_PATH=0 node dist/api.js",
    "test": "playwright test src/tests",
    "postbuild": "ls -R dist",
    "build:digitalocean": "npm ci && npx playwright install --with-deps && npm run build",
    "dev": "nodemon --exec ts-node src/api.ts",
    "start:prod": "PLAYWRIGHT_BROWSERS_PATH=0 node dist/api.js",
    "install-browsers": "playwright install --with-deps chromium firefox webkit",
    "install-system-deps": "playwright install-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "html-to-text": "^9.0.5",
    "playwright": "^1.48.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/express": "^5.0.0",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.7.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2",
    "nodemon": "^3.0.3",
    "playwright": "^1.47.2"
  },
  "engines": {
    "node": ">=18.x"
  }
}
